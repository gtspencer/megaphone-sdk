{
  "name": "0xmegaphone-sdk",
  "version": "1.0.5",
  "description": "",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./react/index.js",
      "require": "./react/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "react"
  ],
  "scripts": {
    "build:core": "tsup src/index.ts --format esm,cjs --dts --clean",
    "build:react": "tsup src/react/index.ts --format esm,cjs --dts --out-dir dist/react --tsconfig tsconfig.react.json",
    "build": "npm run build:core && npm run build:react",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.react.json --noEmit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "peerDependencies": {
    "viem": "^2.0.0",
    "wagmi": "^2.0.0",
    "react": ">=18.0.0 <20",
    "react-dom": ">=18.0.0 <20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtspencer/megaphone-sdk.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gtspencer/megaphone-sdk/issues"
  },
  "homepage": "https://github.com/gtspencer/megaphone-sdk#readme",
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "viem": "^2.19.6",
    "wagmi": "^2.12.8"
  }
}
